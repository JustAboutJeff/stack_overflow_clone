<div class="container">

  <%= form_for @user, url: sessions_path do |f| %>
    <%= label_tag :email %>
    <%= f.email_field :email, placeholder: "JohnDoe@example.com"  %>
    <%= label_tag :password %>
    <%= f.password_field :password, placeholder: "Password"  %>
    <%= f.submit "Login"   %>
  <% end %>

</div>